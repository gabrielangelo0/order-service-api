generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  username String @unique
  password String
  role     String
}

model OrderService {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  description    String
  client         String
  priority       String
  category       String
  estimatedHours Int
  responsible    String
  dueDate        DateTime
  note           String
  status         String
  technician     String
  createdAt      DateTime? @default(now())
}
